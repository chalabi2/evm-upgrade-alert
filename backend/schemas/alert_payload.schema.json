{
  "$id": "alertPayload",
  "type": "object",
  "required": ["chain_id","fork_name","stage","ts","confidence"],
  "properties": {
    "chain_id": { "type": "string" },
    "fork_name": { "type": "string" },
    "stage": { "type": "string" },
    "ts": { "type": "string", "format": "date-time" },
    "activation_epoch": { "type": ["integer","null"] },
    "activation_ts": { "type": ["string","null"], "format": "date-time" },
    "target_ts": { "type": ["string","null"], "format": "date-time" },
    "window_low_ts": { "type": ["string","null"], "format": "date-time" },
    "window_high_ts": { "type": ["string","null"], "format": "date-time" },
    "confidence": { "type": "number" },
    "links": { "type": "array", "items": { "type": "string" } }
  }
}
